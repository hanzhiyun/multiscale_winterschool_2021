#!/bin/bash
for i in 0.01 0.05 0.10 0.15 0.20 0.25 0.30 0.33 0.34 0.35 0.36 0.37 0.38 0.39 0.40  
do
frac=`echo "$i 3.9840952319123812" | awk '{printf("%18.15f\n",$1*$2)}'`
a=`echo "3.9840952319123812+$frac " |bc`
cat > POSCAR << !
al
   1.00000000000000
     `printf "%18.15f \n" $a`    0.0000000000000000    0.0000000000000000
     0.0000000000000000    3.9840952319123812    0.0000000000000000
     0.0000000000000000   -0.0000000000000000    3.9840952319123812
   Al
     4
Direct
  0.0000000000000000  0.0000000000000000 -0.0000000000000000
  0.0000000000000000  0.5000000000000000  0.5000000000000000
  0.5000000000000000 -0.0000000000000000  0.5000000000000000
  0.5000000000000000  0.5000000000000000  0.0000000000000000
!
cp POSCAR POSCAR_$i
mkdir $i
cp  strain-job.sh OPTCELL INCAR POTCAR KPOINTS POSCAR_$i $i/
cd $i
cp POSCAR_$i POSCAR
sbatch strain-job.sh >id
cd ..

done

